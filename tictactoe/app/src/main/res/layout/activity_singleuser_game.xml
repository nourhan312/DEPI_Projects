<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"


        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />


        <ImageView
            android:id="@+id/game_back_icon"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5" />
    </LinearLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:padding="7dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/comuterCard"
            android:layout_width="0dp"
            android:layout_height="250dp"

            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardCornerRadius="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"

                    android:src="@drawable/computer"
                    android:contentDescription="computer"/>

                <View
                    android:id="@+id/settingUnderline"
                    android:layout_width="126dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/computer"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:paddingTop="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/computerScore"
                        android:layout_weight="0.5"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:paddingTop="16dp"/>
                    <ImageView
                        android:id="@+id/computerSymbol"
                        android:layout_weight="0.5"

                        android:layout_height="80dp"

                        android:src="@drawable/xsymbol"
                        android:contentDescription="photo"
                        android:layout_width="0sp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/playerCard"
            android:layout_width="0dp"
            android:layout_height="250dp"

            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            app:cardCornerRadius="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"

                    android:src="@drawable/user"
                    android:contentDescription="player"/>

                <View

                    android:layout_width="126dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <TextView
                   android:id="@+id/playerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:paddingTop="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/PlayerScore"
                        android:layout_weight="0.5"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:paddingTop="16dp"/>
                    <ImageView
                        android:id="@+id/playerSymbol"
                        android:layout_weight="0.5"

                        android:layout_height="80dp"

                        android:src="@drawable/o"
                        android:contentDescription="photo"
                        android:layout_width="0sp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_weight="4"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/grid">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="1"
                android:id="@+id/img_1"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView

                android:tag="2"
                android:id="@+id/img_2"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="3"
                android:id="@+id/img_3"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.85"
            android:orientation="horizontal"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:contentDescription="TODO"
                android:tag="4"
                android:id="@+id/img_4"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="5"
                android:id="@+id/img_5"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15" />

            <ImageView
                android:tag="6"
                android:id="@+id/img_6"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                ></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="10">



            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>
            <ImageView
                android:tag="7"
                android:id="@+id/img_7"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                ></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:tag="8"
                android:id="@+id/img_8"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                ></ImageView>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>

            <ImageView
                android:tag="9"
                android:id="@+id/img_9"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                ></ImageView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"></View>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></View>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"></View>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />



