<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State - Gradient with X color -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="27dp" />
            <stroke android:width="1dip" android:color="#009dff" />
            <!-- X color (blue) -->
            <gradient
                android:angle="0"
                android:startColor="#009dff"
            android:endColor="#00cfff" /> <!-- A lighter blue for a smooth gradient -->
        </shape>
    </item>

    <!-- Focused State - Gradient with O color -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="27dp" />
            <stroke android:width="1dp" android:color="#2B0404" />
            <gradient
                android:angle="0"
                android:startColor="#ff4a4a"
            android:endColor="#ff7979" />

        </shape>
    </item>

    <!-- Default State - Gradient combining both colors -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="27dp" />
            <stroke android:width="1dip" android:color="#009dff" /> <!-- X color (blue) -->
            <gradient
                android:angle="0"
                android:startColor="#009dff"
            android:centerColor="#ff4a4a"
            android:endColor="#ff7979" /> <!-- A lighter red for a combined smooth gradient -->
        </shape>
    </item>

</selector>
